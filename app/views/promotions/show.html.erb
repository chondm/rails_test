<%- model_class = @promotion.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @promotion.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @promotion.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @promotion.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @promotion.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_title) %>:</strong></dt>
  <dd><%= @promotion.sub_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @promotion.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @promotion.description %></dd>
  <dt><strong>Business/ Product Bundle:</strong></dt>
  <%@promotion.businesses_promotions.each do |businesses_promotion|%>
  <dd><%= [businesses_promotion.business.name, businesses_promotion.product_bundle.name].join("/ ") %></dd>
  <%end%>
  <dt><strong><%= model_class.human_attribute_name(:redemption_detail) %>:</strong></dt>
  <dd><%= @promotion.redemption_detail %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              promotions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_promotion_path(@promotion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              promotion_path(@promotion),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
